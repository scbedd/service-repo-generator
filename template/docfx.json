{
    "build": {
        "markdownEngineName": "markdig",
        "content": [
            {% for moniker in config.monikers %}
            {
                "files": [
                    "**/*.md",
                    "**/*.yml"
                ],
                "dest": "{{ config.language }}/sdk/{{ config.service_label }}",
                "group": "{{ moniker }}",
                "src": "{{ moniker }}/docs-ref-autogen",
                "exclude": [
                    "**/obj/**",
                    "**/includes/**",
                    "README.md",
                    "**/toc.md",
                    "**/toc.yml",
                    "LICENSE",
                    "LICENSE-CODE",
                    "ThirdPartyNotices"
                ]
            },
            {
                "files": [
                    "**/*.md",
                    "**/*.yml"
                ],
                "src": "docs-ref-services/{{ moniker }}",
                "dest": "{{ config.language }}/sdk/{{ config.service_label }}",
                "version": "{{ moniker }}",
                "group": "{{ moniker }}"
            },
            {
                "files": [
                    "**/toc.md",
                    "**/toc.yml"
                ],
                "src": "{{ moniker }}/docs-ref-autogen",
                "dest": "{{ config.language }}/sdk/{{ config.service_label }}",
                "group": "{{ moniker }}"
            },
            {
                "files": [
                    "**/*.yml"
                ],
                "src": "breadcrumb",
                "group": "{{ moniker }}",
                "dest": "{{ (moniker.replace('-','_') + '_breadcrumb') }}",
                "exclude": [
                    "**/obj/**",
                    "**/includes/**"
                ]
            }{{ "," if not loop.last }}
            {% endfor %}

        ],
        "resource": [
            {
                "files": [
                    "**/*.png",
                    "**/*.jpg"
                ],
                "exclude": [
                    "**/obj/**",
                    "**/includes/**"
                ]
            }
        ],
        "overwrite": [],
        "externalReference": [],
        "globalMetadata": {
            "breadcrumb_path": "~/breadcrumb/toc.yml"
        },
        "groups": {
            {% for moniker in config.monikers %}
            "{{ moniker }}": {
                "dest": "{{ moniker }}",
                "moniker_range": "{{ moniker }}"
            }
            {{ "," if not loop.last }}
            {% endfor %}
        },
        "fileMetadata": {},
        "template": [],
        "dest": "_site",
        "apiPlatform": "{{ config.language }}",
    }
}